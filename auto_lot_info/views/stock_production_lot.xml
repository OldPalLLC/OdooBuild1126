<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mrp_stock_production_lot_form_inherit_auto_lot_info" model="ir.ui.view">
    	<field name="name">stock.production.lot.inherit.auto_lot_info</field>
    	<field name="model">stock.production.lot</field>
		<field name='mode'>extension</field>
    	<field name="inherit_id" ref="stock.view_production_lot_form"/>
    	<field name="arch" type="xml">
			<xpath expr="//field[@name='ref']" position="after">
				<field name="produced_form"/>
			</xpath>
			<xpath expr="//group[@name='main_group']" position="after">
				<group name='lot_details'>
					<field name="thc_percent"/>
					<field name="cbd_percent"/>
				</group>
				<group name='lab_details'>
					<field name="test_results"/>
					<field name="lab_name"/>
				</group>
			</xpath>
    	</field>
    </record>
</odoo>